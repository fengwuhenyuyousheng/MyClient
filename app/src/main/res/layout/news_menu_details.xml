<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_news_cate_arr_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_cate_arr_back"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:background="#00000000"
            android:padding="10dp"
            />

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/tab_page_indicator_news_details"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/ib_news_cate_arr_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_cate_arr_next"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:padding="10dp"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_news_menu_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



</LinearLayout>